<%= turbo_stream.update "stats" do %>
  <%= render "tackle_box_items/stats", fish_catches: @fish_catches %>
<% end %>

<%# this will render the _fish_catch partial - by convention %>
<%= turbo_stream.prepend "catches", @fish_catch %>

<%# this is used to clear the form in order to file another catch %>
<%= turbo_stream.update "new_catch" do %>
  <%= render "form", fish_catch: @new_catch %>
<% end %>

<%# this will render the helper method from /helpers/application_helper %>
<%= render_flash_stream %>